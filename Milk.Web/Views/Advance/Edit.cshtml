@model Milk.Web.ViewModels.AdvanceEditViewModel
@{
    ViewData["Title"] = "Edit";
}

@section Styles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
}
<h1>Edit</h1>

<form asp-controller="Advance" asp-action="Edit" autocomplete="off" id="AdvanceForm" enctype="multipart/form-data">


    <div class="row my-1">
        <div class="col-md-9">
            <div class="form-group">
                <label class="float-label">Select Farmer</label>
                <div class="my-custom-select width-100">
                    <select class="form-control select-dropDown" asp-for="FarmerId" value="" asp-items="ViewBag.FarmersList">
                        <option value="">select</option>
                    </select>
                </div>
                <span asp-validation-for="FarmerId" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row my-1">
        <div class="col-md-9">
            <div class="form-group">
                <label asp-for="Date" class="control-label float-label">Select Date</label>
                <input type="text" asp-for="Date" readonly="readonly" class="form-control" maxlength="40"  />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row my-1">
        <div class="col-md-9">
            <div class="form-group">
                <label asp-for="Amount" class="control-label float-label mt-2">Advance</label>
                <input type="text" asp-for="Amount" placeholder="Enter Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
    </div>


    <div class="m-t-30">
        <button class="btn btn-primary m-r-10">Update</button>
        <a asp-controller="Advance" asp-action="index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(document).ready(function () {
            $("#btnSubmit").click(function () {
                if ($("#form").valid()) {
                    $("#btnSubmit").prop("disabled", "true")
                    $("#form").submit();
                }
            });
        });
        $(document).ready(function () {
            $('#Date').datepicker({
            });
        })
    </script>
}
